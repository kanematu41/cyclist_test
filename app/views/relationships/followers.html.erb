<div class="container">
	<div class="row">
		<div class="col">
			<h3>フォロワー一覧</h3>

		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="5"></th>
				</tr>
			</thead>

			<tbody>
				<% @followers.each do |user| %>
				<tr>
					<td><%= attachment_image_tag(user, :profile_image, size: '50x50', fallback: "no_image.png") %></td>
					<td><%= user.name%></td>

					<td>フォロー数 : <%= user.follower.count %></td>
					<td>フォロワー数 : <%= user.followed.count %></td>
					<td><%= link_to "Show", user_path(user.id) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>


		</div>
	</div>
</div>