<div class="container">
	<div class="row">
		<div class="col">
			<h2>投稿編集</h2>

			<%= form_for(@post) do|f| %>

			<div class="field">
				<%= f.label :title %>
				<%= f.text_field :title %>
			</div>

			<div class="field">
				<%= f.label :image %>
				<%= f.attachment_field :image %>
			</div>

			<div class="field">
				<%= f.label :body %>
				<%= f.text_area :body %>
			</div>

			<div class="actions">
				<%= f.submit %>
			</div>

			<% end %>
		</div>
	</div>
</div>